<div class="content-wrapper">

  <div id="gh-user">
    <h2>GH user details</h2>
    <% if current_user  %>
      <div class="gh-detail">
        <%= link_to(current_user.username,"http://github.com/#{current_user.username}") %>
      </div>
      <div class="gh-detail">
        <%= web_img(current_user.avatar_url) %>
      </div>
      <div class="gh-detail">
        <%= client.user.location %>
      </div>
    <% else %>
      <div class="gh-detail-no-user">
        <span>Sign in above to see user details from Github</span>
      </div>
    <% end %>
  </div>

  <div id="gh-stats">
    <h2>Github stat dashboard here</h2>
  </div>

  <div id="visualized">
    <h2>Charts here</h2>
  </div>
</div>
