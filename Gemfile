source 'https://rubygems.org'

# core app & functionality
gem 'sinatra'
gem 'omniauth'
gem 'omniauth-github'
gem 'dotenv'
gem 'bundler'

# activerecord support
gem 'activerecord'
gem 'sinatra-activerecord'
gem 'pg'

# github API interaction
gem 'octokit', "~> 4.0"

# JSON interaction
gem 'json'

# style
gem 'sass', '>=3.3.0'
gem 'bourbon'
gem 'neat'
gem 'bitters'

# dev
group :development do
  gem 'shotgun'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'rake'
end
